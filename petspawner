local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- âœ… Create lightweight GUI
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "RemoteLoggerLite"

local logBox = Instance.new("TextLabel", gui)
logBox.Size = UDim2.new(0, 600, 0, 300)
logBox.Position = UDim2.new(0, 20, 0, 20)
logBox.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
logBox.TextColor3 = Color3.fromRGB(0, 255, 0)
logBox.Font = Enum.Font.Code
logBox.TextSize = 14
logBox.TextWrapped = true
logBox.TextXAlignment = Enum.TextXAlignment.Left
logBox.TextYAlignment = Enum.TextYAlignment.Top
logBox.Text = "ðŸ“¡ Remote Spy Ready..."

-- âœ… Logger function
local function log(text)
    logBox.Text = logBox.Text .. "\n" .. text
    if #logBox.Text > 10000 then -- Limit to prevent lag
        logBox.Text = "ðŸ“¡ Remote Spy Log Reset...\n"
    end
end

-- âœ… Hook __namecall to log remote calls
local mt = getrawmetatable(game)
setreadonly(mt, false)
local old = mt.__namecall

mt.__namecall = newcclosure(function(self, ...)
    local method = getnamecallmethod()
    if method == "FireServer" or method == "InvokeServer" then
        local args = {...}
        local msg = "ðŸ“¤ " .. tostring(self)
        for i, a in ipairs(args) do
            msg = msg .. "\n   [" .. i .. "]: " .. tostring(a)
        end
        log(msg)
    end
    return old(self, ...)
end)

log("âœ… Listening for RemoteEvents... Try hatching or duplicating.")
