-- Pet Spawner GUI for Grow a Garden (for testing)

repeat wait() until game:IsLoaded() and game.Players.LocalPlayer and game.Players.LocalPlayer:FindFirstChild("PlayerGui")

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Create Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 220)
frame.Position = UDim2.new(0.5, -160, 0.5, -110)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 10)
uiCorner.Parent = frame

-- Utility function to create labeled input TextBoxes
local function createInput(name, posY)
    local label = Instance.new("TextLabel")
    label.Text = name .. ":"
    label.Position = UDim2.new(0, 10, 0, posY)
    label.Size = UDim2.new(0, 80, 0, 25)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 18
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    local input = Instance.new("TextBox")
    input.PlaceholderText = name
    input.Position = UDim2.new(0, 100, 0, posY)
    input.Size = UDim2.new(0, 200, 0, 25)
    input.Font = Enum.Font.SourceSans
    input.TextSize = 18
    input.TextColor3 = Color3.new(0, 0, 0)
    input.BackgroundColor3 = Color3.fromRGB(220, 220, 220)
    input.ClearTextOnFocus = false
    input.Parent = frame

    return input
end

-- Create Inputs
local petInput = createInput("Pet Name", 10)
local ageInput = createInput("Age", 50)
local weightInput = createInput("Weight", 90)

-- Spawn Button
local spawnBtn = Instance.new("TextButton")
spawnBtn.Position = UDim2.new(0.5, -100, 0, 140)
spawnBtn.Size = UDim2.new(0, 200, 0, 50)
spawnBtn.Text = "SPAWN PET"
spawnBtn.Font = Enum.Font.SourceSansBold
spawnBtn.TextSize = 24
spawnBtn.TextColor3 = Color3.new(1, 1, 1)
spawnBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
spawnBtn.Parent = frame

-- Spawn Pet functionality
spawnBtn.MouseButton1Click:Connect(function()
    local petName = petInput.Text:match("^%s*(.-)%s*$") -- trim spaces
    local age = tonumber(ageInput.Text) or 1
    local weight = tonumber(weightInput.Text) or 1

    if petName == "" then
        warn("Please enter a Pet Name.")
        return
    end

    -- Find tool in ReplicatedStorage
    local foundTool = nil
    for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
        if obj:IsA("Tool") and string.lower(obj.Name) == string.lower(petName) then
            foundTool = obj
            break
        end
    end

    if not foundTool then
        warn("❌ Pet Tool not found in ReplicatedStorage: " .. petName)
        return
    end

    -- Clone the tool
    local clonedTool = foundTool:Clone()

    -- Set Age and Weight values if they exist inside the tool
    local ageValue = clonedTool:FindFirstChild("Age")
    if ageValue and ageValue:IsA("NumberValue") then
        ageValue.Value = age
    end

    local weightValue = clonedTool:FindFirstChild("Weight")
    if weightValue and weightValue:IsA("NumberValue") then
        weightValue.Value = weight
    end

    -- Wait for character to be loaded & set parent accordingly
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        clonedTool.Parent = LocalPlayer.Character
    else
        clonedTool.Parent = LocalPlayer.Backpack
    end

    print("✅ Spawned " .. petName .. " with Age: " .. age .. " and Weight: " .. weight)
end)

print("✅ Pet Spawner GUI loaded")
