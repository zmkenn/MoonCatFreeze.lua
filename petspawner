local RunService = game:GetService("RunService")
local petsFolder = workspace:FindFirstChild("Pets") or workspace

local function disableMovement(model)
    for _, inst in ipairs(model:GetDescendants()) do
        if inst:IsA("AlignPosition") or inst:IsA("AlignOrientation") then
            inst:Destroy()
        elseif inst:IsA("Attachment") then
            -- Remove attachments used by those constraints
            inst:Destroy()
        end
    end
end

-- Freeze existing pets
for _, pet in ipairs(petsFolder:GetDescendants()) do
    if pet:IsA("Model") and pet.Name == "Cat" then
        disableMovement(pet)
    end
end

-- Track new pets spawning
petsFolder.DescendantAdded:Connect(function(inst)
    local model = inst:FindFirstAncestorWhichIsA("Model")
    if model and model.Name == "Cat" then
        disableMovement(model)
    end
end)
