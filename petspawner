-- Freeze all pets in workspace.Animals on the client
local RunService = game:GetService("RunService")
-- Wait for the Animals folder to exist (your plotâ€™s pets container)
local animals = workspace:WaitForChild("Animals")

-- Function to anchor a pet model
local function freezePet(pet)
    if pet:IsA("Model") then
        for _, part in ipairs(pet:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Anchored = true    -- anchor the part to lock position
            end
            if part:IsA("BodyMover") then
                part:Destroy()         -- remove any BodyMover (BodyPosition, etc.)
            end
        end
    end
end

-- Freeze existing pets
for _, pet in ipairs(animals:GetChildren()) do
    freezePet(pet)
end

-- Freeze any pets that spawn later
animals.ChildAdded:Connect(function(pet)
    freezePet(pet)
end)
