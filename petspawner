-- Create a new garden
local garden = Instance.new("Model")
garden.Name = "Garden"
garden.Parent = game.Workspace

-- Create a new pet spawner
local petSpawner = Instance.new("Model")
petSpawner.Name = "PetSpawner"
petSpawner.Parent = garden

-- Create a new pet model
local petModel = Instance.new("Model")
petModel.Name = "Pet"
petModel.Parent = petSpawner

-- Create a new pet
local function spawnPet()
local pet = Instance.new("Model")
pet.Name = "Pet"
pet.Parent = petSpawner
end

-- Spawning pets every 5 seconds
game:GetService("RunService").Stepped:Connect(function()
spawnPet()
end)

-- Growing a garden
local function growGarden()
for _, seed in pairs(garden:GetChildren()) do
if seed:IsA("BasePart") then
seed.Size = seed.Size + Vector3.new(0.1, 0.1, 0.1)
end
end
end

-- Growing the garden every 10 seconds
game:GetService("RunService").Stepped:Connect(function()
growGarden()
end)
