local RunService = game:GetService("RunService")
local PetMover = workspace:FindFirstChild("PetsPhysical") and workspace.PetsPhysical:FindFirstChild("PetMover")

if not PetMover then
    warn("PetMover not found")
    return
end

for _, cat in pairs(PetMover:GetChildren()) do
    if cat.Name == "Cat" and cat:FindFirstChild("RootPart") then
        local root = cat.RootPart
        local pos = root.Position

        -- Lock position every frame
        RunService.Heartbeat:Connect(function()
            if root and root.Parent then
                root.Anchored = true
                root.CFrame = CFrame.new(pos)
            end
        end)

        -- Stop animation if Animator exists
        local animController = cat:FindFirstChild("AnimationController")
        if animController then
            local animator = animController:FindFirstChild("Animator")
            if animator then
                animator:Destroy()
            end
        end

        -- Disable all Motor6Ds
        for _, motor in pairs(cat:GetDescendants()) do
            if motor:IsA("Motor6D") then
                pcall(function()
                    motor.Enabled = false
                end)
            end
        end
    end
end
