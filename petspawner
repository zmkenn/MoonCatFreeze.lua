-- ðŸŒ¿ Freeze all pets (like MoonCats) on your plot
-- This anchors pet parts so they don't move, but passives should still work if server allows

local player = game:GetService("Players").LocalPlayer
local function freezePets()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:FindFirstChild("Owner") and obj.Owner.Value == player.Name then
            if obj.Name:lower():find("mooncat") or obj.Name:lower():find("pet") then
                for _, part in ipairs(obj:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.Anchored = true
                    end
                end
            end
        end
    end
end

-- Run once and every 5 seconds to re-anchor in case new pets are added
freezePets()
while true do
    wait(5)
    freezePets()
end
