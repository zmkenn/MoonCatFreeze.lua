spawnButton.MouseButton1Click:Connect(function()
    local age = tonumber(ageBox.Text)
    local weight = tonumber(weightBox.Text)

    if not age or not weight then
        warn("❌ Invalid input. Age and weight must be numbers.")
        return
    end

    -- 🔁 Clean decimals
    age = math.floor(age * 100) / 100
    weight = math.floor(weight * 100) / 100

    -- 🔁 Try different formats
    local formats = {
        function() return petRemote:FireServer("Raccoon", age, weight) end,
        function() return petRemote:FireServer("SpawnPet", "Raccoon", age, weight) end,
        function() return petRemote:FireServer({Pet = "Raccoon", Age = age, Weight = weight}) end
    }

    local success = false
    for _, try in ipairs(formats) do
        local ok = pcall(try)
        if ok then
            success = true
            break
        end
    end

    if success then
        print("✅ Spawned Raccoon with age:", age, "and weight:", weight)
    else
        warn("❌ Failed to spawn pet with all formats.")
    end
end)
