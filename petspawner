local player = game.Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")
local screenGui = Instance.new("ScreenGui", player.PlayerGui)
screenGui.Name = "PetDuplicator"
screenGui.ResetOnSpawn = false

-- Frame
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true

local uicorner = Instance.new("UICorner", frame)
uicorner.CornerRadius = UDim.new(0, 10)

-- Inputs
local function createInput(labelText, posY)
    local label = Instance.new("TextLabel", frame)
    label.Text = labelText
    label.Position = UDim2.new(0, 10, 0, posY)
    label.Size = UDim2.new(0, 80, 0, 25)
    label.TextColor3 = Color3.new(1, 1, 1)
    label.BackgroundTransparency = 1

    local box = Instance.new("TextBox", frame)
    box.PlaceholderText = labelText
    box.Position = UDim2.new(0, 100, 0, posY)
    box.Size = UDim2.new(0, 180, 0, 25)
    box.TextColor3 = Color3.new(0, 0, 0)
    box.BackgroundColor3 = Color3.fromRGB(200, 200, 200)

    return box
end

local petNameInput = createInput("Pet Name", 10)
local ageInput = createInput("Age", 45)
local weightInput = createInput("Weight", 80)

-- Button
local button = Instance.new("TextButton", frame)
button.Position = UDim2.new(0.5, -100, 0, 120)
button.Size = UDim2.new(0, 200, 0, 40)
button.Text = "Duplicate Pet"
button.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 24

button.MouseButton1Click:Connect(function()
    local name = petNameInput.Text
    if not name or name == "" then
        warn("❌ Pet name is required")
        return
    end

    local sourceTool = backpack:FindFirstChild(name)
    if not sourceTool then
        warn("❌ Pet not found in backpack: " .. name)
        return
    end

    local clone = sourceTool:Clone()
    clone.Parent = backpack

    local age = tonumber(ageInput.Text)
    local weight = tonumber(weightInput.Text)

    if age and clone:FindFirstChild("Age") then
        clone.Age.Value = age
    end

    if weight and clone:FindFirstChild("Weight") then
        clone.Weight.Value = weight
    end

    print("✅ Duplicated:", name, " | Age:", age or "default", "| Weight:", weight or "default")
end)

print("✅ Pet Duplicator GUI Loaded")
