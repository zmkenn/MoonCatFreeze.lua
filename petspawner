-- LocalScript placed in StarterPlayerScripts or StarterCharacterScripts

-- Wait until player and PlayerGui exists
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

repeat wait() until LocalPlayer and LocalPlayer:FindFirstChild("PlayerGui")

-- Reference to RemoteEvent (must exist in ReplicatedStorage)
local spawnPetEvent = ReplicatedStorage:WaitForChild("PetSpawnRequest")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer.PlayerGui

-- Create Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 350, 0, 260)
frame.Position = UDim2.new(0.5, -175, 0.5, -130)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 12)
uiCorner.Parent = frame

local function createInput(name, posY)
    local label = Instance.new("TextLabel")
    label.Text = name .. ":"
    label.Position = UDim2.new(0, 15, 0, posY)
    label.Size = UDim2.new(0, 90, 0, 28)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 18
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    local input = Instance.new("TextBox")
    input.PlaceholderText = "Enter " .. name
    input.Position = UDim2.new(0, 115, 0, posY)
    input.Size = UDim2.new(0, 210, 0, 28)
    input.Font = Enum.Font.Gotham
    input.TextSize = 18
    input.TextColor3 = Color3.new(0, 0, 0)
    input.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
    input.ClearTextOnFocus = false
    input.Parent = frame

    return input
end

local petNameInput = createInput("Pet Name", 20)
local ageInput = createInput("Age", 60)
local weightInput = createInput("Weight", 100)

local spawnBtn = Instance.new("TextButton")
spawnBtn.Size = UDim2.new(0, 320, 0, 50)
spawnBtn.Position = UDim2.new(0.5, -160, 0, 160)
spawnBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
spawnBtn.Font = Enum.Font.GothamBold
spawnBtn.TextSize = 24
spawnBtn.TextColor3 = Color3.new(1, 1, 1)
spawnBtn.Text = "Spawn Pet"
spawnBtn.AutoButtonColor = true
spawnBtn.Parent = frame

local statusLabel = Instance.new("TextLabel")
statusLabel.Position = UDim2.new(0, 0, 1, -30)
statusLabel.Size = UDim2.new(1, 0, 0, 25)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 75, 75)
statusLabel.Font = Enum.Font.GothamBold
statusLabel.TextSize = 18
statusLabel.Text = ""
statusLabel.Parent = frame

spawnBtn.MouseButton1Click:Connect(function()
    local petName = petNameInput.Text:match("^%s*(.-)%s*$")
    local age = tonumber(ageInput.Text) or 1
    local weight = tonumber(weightInput.Text) or 1

    if petName == "" then
        statusLabel.TextColor3 = Color3.fromRGB(255, 75, 75)
        statusLabel.Text = "Please enter a valid Pet Name."
        return
    end

    statusLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
    statusLabel.Text = "Requesting spawn..."

    -- Fire server event to spawn pet
    spawnPetEvent:FireServer(petName, age, weight)
end)

-- Optional: Listen for confirmations or errors sent back from server
spawnPetEvent.OnClientEvent:Connect(function(success, message)
    if success then
        statusLabel.TextColor3 = Color3.fromRGB(75, 255, 75)
        statusLabel.Text = message
    else
        statusLabel.TextColor3 = Color3.fromRGB(255, 75, 75)
        statusLabel.Text = message
    end
end)
