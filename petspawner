local RunService = game:GetService("RunService")
local pet = workspace:WaitForChild("Cat")

-- Anchor ALL parts in the pet
for _, part in pairs(pet:GetDescendants()) do
	if part:IsA("BasePart") then
		part.Anchored = true
	end
end

-- Stop pet scripts (optional, safe toggle)
for _, obj in pairs(pet:GetDescendants()) do
	if obj:IsA("Script") or obj:IsA("LocalScript") then
		obj.Disabled = true
	end
end

-- Lock the pet in position
local freezePosition = pet:GetPrimaryPartCFrame()

RunService.Heartbeat:Connect(function()
	if pet and pet.PrimaryPart then
		pet:SetPrimaryPartCFrame(freezePosition)
	end
end)
