-- âœ… GUI Spawner with Custom Pet Name, Age, and Weight
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local LocalPlayer = Players.LocalPlayer
local RS = game:GetService("ReplicatedStorage")

-- GUI Setup
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "PetSpawnerGUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 160)
frame.Position = UDim2.new(0, 20, 0, 80)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0

local petBox = Instance.new("TextBox", frame)
petBox.PlaceholderText = "Pet Name (e.g. Cat, Frog)"
petBox.Size = UDim2.new(1, -20, 0, 30)
petBox.Position = UDim2.new(0, 10, 0, 10)

local ageBox = Instance.new("TextBox", frame)
ageBox.PlaceholderText = "Age (whole number)"
ageBox.Size = UDim2.new(1, -20, 0, 30)
ageBox.Position = UDim2.new(0, 10, 0, 50)

local kgBox = Instance.new("TextBox", frame)
kgBox.PlaceholderText = "Weight (e.g. 3.25)"
kgBox.Size = UDim2.new(1, -20, 0, 30)
kgBox.Position = UDim2.new(0, 10, 0, 90)

local spawnBtn = Instance.new("TextButton", frame)
spawnBtn.Text = "Spawn Pet"
spawnBtn.Size = UDim2.new(1, -20, 0, 30)
spawnBtn.Position = UDim2.new(0, 10, 0, 130)
spawnBtn.BackgroundColor3 = Color3.fromRGB(50, 200, 50)

-- Spawn Logic
spawnBtn.MouseButton1Click:Connect(function()
    local petName = petBox.Text
    local age = tonumber(ageBox.Text)
    local weight = tonumber(kgBox.Text)

    if not petName or not age or not weight then return end

    local petModel = Workspace:FindFirstChild("PetsPhysical")
    if petModel and petModel:FindFirstChild("PetMover") then
        for _, model in pairs(petModel.PetMover:GetChildren()) do
            if model.Name == petName then
                local clone = model:Clone()
                clone.Name = petName .. "_Clone"
                clone.Parent = Workspace
                clone:SetPrimaryPartCFrame(LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(5, 0, 0))

                -- Tag for display
                local tag = Instance.new("BillboardGui", clone.PrimaryPart)
                tag.Size = UDim2.new(0, 100, 0, 40)
                tag.StudsOffset = Vector3.new(0, 3, 0)
                tag.AlwaysOnTop = true
                local text = Instance.new("TextLabel", tag)
                text.Size = UDim2.new(1, 0, 1, 0)
                text.BackgroundTransparency = 1
                text.Text = "Age: " .. age .. ", Kg: " .. weight
                text.TextColor3 = Color3.fromRGB(255, 255, 0)
                text.TextScaled = true
                return
            end
        end
    end
end)
