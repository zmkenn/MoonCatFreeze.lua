for _, service in ipairs({"ReplicatedStorage", "Workspace"}) do
    for _, obj in ipairs(game:GetService(service):GetDescendants()) do
        if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
            local original
            if obj:IsA("RemoteEvent") then
                original = obj.FireServer
                obj.FireServer = function(self, ...)
                    print("üì° RemoteEvent:", obj:GetFullName(), "Args:", ...)
                    return original(self, ...)
                end
            elseif obj:IsA("RemoteFunction") then
                original = obj.InvokeServer
                obj.InvokeServer = function(self, ...)
                    print("üîÅ RemoteFunction:", obj:GetFullName(), "Args:", ...)
                    return original(self, ...)
                end
            end
        end
    end
end

print("‚úÖ Universal Hook loaded. Try manually spawning any pet.")
