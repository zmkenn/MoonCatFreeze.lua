-- ✅ Freeze ALL MoonCats + Lock their passive visual effects
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Setup log GUI
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "FreezeLogger"
screenGui.ResetOnSpawn = false

local logBox = Instance.new("TextLabel", screenGui)
logBox.Size = UDim2.new(0, 500, 0, 400)
logBox.Position = UDim2.new(0, 20, 0, 20)
logBox.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
logBox.TextColor3 = Color3.fromRGB(0, 255, 0)
logBox.TextXAlignment = Enum.TextXAlignment.Left
logBox.TextYAlignment = Enum.TextYAlignment.Top
logBox.Font = Enum.Font.Code
logBox.TextSize = 14
logBox.TextWrapped = true
logBox.Text = ""

local function log(msg)
	logBox.Text = logBox.Text .. msg .. "\n"
end

local function hardFreezeAllMoonCats()
	local pets = workspace:FindFirstChild("PetsPhysical")
	if not pets then return log("❌ PetsPhysical not found") end

	local mover = pets:FindFirstChild("PetMover")
	if not mover then return log("❌ PetMover not found") end

	local count = 0
	for _, cat in ipairs(mover:GetChildren()) do
		if cat:IsA("Model") and cat.Name == "Cat" then
			count += 1

			local freezeClone = cat:Clone()
			freezeClone.Name = "FrozenMoonCat_" .. tostring(count)

			-- Position the clone exactly at the original's pivot
			freezeClone:PivotTo(cat:GetPivot())

			-- Disable animation and movement completely
			for _, item in ipairs(freezeClone:GetDescendants()) do
				if item:IsA("Motor6D") or item:IsA("Animator") or item:IsA("AnimationController") then
					item:Destroy()
				elseif item:IsA("BasePart") then
					item.Anchored = true
					item.CanCollide = false
					item:SetNetworkOwner(nil)
				end
			end

			-- Place frozen clone into workspace
			freezeClone.Parent = mover
			log("❄️ Frozen MoonCat #" .. count)
		end
	end

	if count == 0 then
		log("⚠️ No MoonCats found.")
	else
		log("✅ Done freezing " .. count .. " MoonCats.")
	end
end

hardFreezeAllMoonCats()
