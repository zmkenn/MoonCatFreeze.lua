-- ✅ GUI Pet Spawner with Custom Age & Weight for Grow a Garden

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- ✅ GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 220)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local petNameBox = Instance.new("TextBox")
petNameBox.PlaceholderText = "Pet Name (e.g., Raccoon)"
petNameBox.Size = UDim2.new(1, -20, 0, 30)
petNameBox.Position = UDim2.new(0, 10, 0, 10)
petNameBox.Parent = frame

local ageBox = Instance.new("TextBox")
ageBox.PlaceholderText = "Age (Whole Number)"
ageBox.Size = UDim2.new(1, -20, 0, 30)
ageBox.Position = UDim2.new(0, 10, 0, 50)
ageBox.Parent = frame

local weightBox = Instance.new("TextBox")
weightBox.PlaceholderText = "Weight (Decimal)"
weightBox.Size = UDim2.new(1, -20, 0, 30)
weightBox.Position = UDim2.new(0, 10, 0, 90)
weightBox.Parent = frame

local spawnButton = Instance.new("TextButton")
spawnButton.Text = "Spawn Pet"
spawnButton.Size = UDim2.new(1, -20, 0, 40)
spawnButton.Position = UDim2.new(0, 10, 0, 140)
spawnButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
spawnButton.TextColor3 = Color3.fromRGB(255, 255, 255)
spawnButton.Parent = frame

-- ✅ Pet Cloner (Client-side only visual clone)
local function spawnPet(name, age, weight)
    local original = workspace:FindFirstChild("PetsPhysical")
    if not original then return end
    for _, pet in pairs(original:GetChildren()) do
        if pet.Name:lower():match(name:lower()) then
            local clone = pet:Clone()
            clone.Parent = workspace
            clone:SetPrimaryPartCFrame(pet:GetPrimaryPartCFrame() * CFrame.new(3, 0, 0))

            -- Attach fake values visually
            local tag = Instance.new("BillboardGui")
            tag.Size = UDim2.new(0, 200, 0, 50)
            tag.StudsOffset = Vector3.new(0, 3, 0)
            tag.Adornee = clone.PrimaryPart
            tag.AlwaysOnTop = true
            tag.Parent = clone

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(1, 0, 1, 0)
            label.BackgroundTransparency = 1
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.TextStrokeTransparency = 0.5
            label.TextScaled = true
            label.Font = Enum.Font.SourceSansBold
            label.Text = "Age: "..age.." | Kg: "..weight
            label.Parent = tag
        end
    end
end

-- ✅ Button Click
spawnButton.MouseButton1Click:Connect(function()
    local name = petNameBox.Text
    local age = tonumber(ageBox.Text)
    local kg = tonumber(weightBox.Text)
    if name ~= "" and age and kg then
        spawnPet(name, age, kg)
    end
end)
