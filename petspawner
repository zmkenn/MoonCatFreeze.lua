local runService = game:GetService("RunService")
local scriptManager = game:GetService("ScriptContext")

local function bypassSecurityScript()
scriptManager:StopAllScripts()
scriptManager:CreateScript("ZoneFreezingScript")
wait(0.1)
scriptManager:ResumeScripts()
end

local function loadScript()
local script = Instance.new("LocalScript")
script.Name = "ZoneFreezingScript"
script.Parent = game.Players.LocalPlayer.PlayerScripts
bypassSecurityScript()
end

loadScript()

-- Zone freezing script
local function freezeZone()
for _, child in pairs(workspace:GetDescendants()) do
if child:IsA("BasePart") and child.Name == "Zone" then
child.CFrame = CFrame.new(Vector3.new(19.56, 3.11, 88.19))
end
end
end

freezeZone()

-- Keep watching for new zones added dynamically
workspace.DescendantAdded:Connect(function(child)
task.wait(0.2) -- allow it to initialize
if child:IsA("BasePart") and child.Name == "Zone" then
child.CFrame = CFrame.new(Vector3.new(19.56, 3.11, 88.19))
end
end)
