-- üê∏ Clone "Frog" and assign unique age & weight to bypass dupe deletion
local parentFolder = workspace:FindFirstChild("PetsPhysical") and workspace.PetsPhysical:FindFirstChild("PetMover")
if not parentFolder then
    warn("‚ùå Cannot find PetsPhysical.PetMover")
    return
end

local function clonePet(originalName, newAge, newWeight)
    for _, pet in pairs(parentFolder:GetChildren()) do
        if pet.Name == originalName then
            local clone = pet:Clone()
            clone.Name = originalName .. "_Clone"

            -- Try setting Age and Weight inside known ObjectValues or Attributes
            pcall(function()
                if clone:FindFirstChild("Age") then
                    clone.Age.Value = newAge
                elseif clone:FindFirstChildWhichIsA("NumberValue") then
                    for _, v in pairs(clone:GetChildren()) do
                        if v:IsA("NumberValue") and v.Name:lower():find("age") then
                            v.Value = newAge
                        end
                    end
                end
            end)

            pcall(function()
                if clone:FindFirstChild("Weight") then
                    clone.Weight.Value = newWeight
                elseif clone:FindFirstChildWhichIsA("NumberValue") then
                    for _, v in pairs(clone:GetChildren()) do
                        if v:IsA("NumberValue") and v.Name:lower():find("weight") then
                            v.Value = newWeight
                        end
                    end
                end
            end)

            clone.Parent = parentFolder
            print("‚úÖ Cloned " .. originalName .. " with Age " .. newAge .. " and Weight " .. newWeight)
            return
        end
    end
    warn("‚ùå Original pet not found in PetMover")
end

clonePet("Frog", 4.1, 4.56) -- Slightly different to avoid deletion
