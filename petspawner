-- üêæ Pet Spawner GUI with visibility fix, draggable, and large button
-- Use this in Delta after uploading to GitHub:
-- loadstring(game:HttpGet("https://raw.githubusercontent.com/zmkenn/MoonCatFreeze.lua/main/PetSpawnerGUI.lua"))()

repeat wait() until game:IsLoaded() and game.Players.LocalPlayer and game.Players.LocalPlayer:FindFirstChild("PlayerGui")

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Destroy existing UI if re-executed
if PlayerGui:FindFirstChild("PetSpawnerUI") then
    PlayerGui.PetSpawnerUI:Destroy()
end

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 220)
frame.Position = UDim2.new(0.5, -160, 0.5, -110)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 10)
uiCorner.Parent = frame

local function createInput(name, posY)
    local label = Instance.new("TextLabel")
    label.Text = name .. ":"
    label.Position = UDim2.new(0, 10, 0, posY)
    label.Size = UDim2.new(0, 80, 0, 30)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 18
    label.Parent = frame

    local input = Instance.new("TextBox")
    input.PlaceholderText = name
    input.Position = UDim2.new(0, 100, 0, posY)
    input.Size = UDim2.new(0, 200, 0, 30)
    input.Font = Enum.Font.SourceSans
    input.TextSize = 18
    input.TextColor3 = Color3.new(0, 0, 0)
    input.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    input.Parent = frame

    return input
end

local petInput = createInput("Pet Name", 10)
local ageInput = createInput("Age", 55)
local weightInput = createInput("Weight", 100)

local spawnBtn = Instance.new("TextButton")
spawnBtn.Position = UDim2.new(0.5, -100, 0, 150)
spawnBtn.Size = UDim2.new(0, 200, 0, 45)
spawnBtn.Text = "SPAWN PET"
spawnBtn.Font = Enum.Font.SourceSansBold
spawnBtn.TextSize = 24
spawnBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
spawnBtn.Parent = frame

spawnBtn.MouseButton1Click:Connect(function()
    local petName = petInput.Text
    local age = tonumber(ageInput.Text)
    local weight = tonumber(weightInput.Text)

    if not petName or petName == "" then return end

    local template = nil
    for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
        if obj:IsA("Tool") and obj.Name == petName then
            template = obj
            break
        end
    end

    if not template then
        warn("Pet not found in ReplicatedStorage: " .. petName)
        return
    end

    local clone = template:Clone()
    clone.Parent = LocalPlayer:WaitForChild("Backpack")

    -- Set attributes if they exist
    if clone:FindFirstChild("Age") then
        clone.Age.Value = age or 0
    end
    if clone:FindFirstChild("Weight") then
        clone.Weight.Value = weight or 0
    end

    print("‚úÖ Added " .. petName .. " to backpack with Age: " .. tostring(age) .. ", Weight: " .. tostring(weight))
end)

print("‚úÖ Pet Spawner GUI visible and functional")
