local RS = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer

-- Billboard logger setup
local part = Instance.new("Part")
part.Name = "LoggerPart"
part.Size = Vector3.new(4, 1, 1)
part.Position = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.Position + Vector3.new(0, 5, 0) or Vector3.new(0, 10, 0)
part.Anchored = true
part.CanCollide = false
part.Parent = workspace

local billboard = Instance.new("BillboardGui", part)
billboard.Size = UDim2.new(0, 400, 0, 100)
billboard.AlwaysOnTop = true
billboard.StudsOffset = Vector3.new(0, 2, 0)

local label = Instance.new("TextLabel", billboard)
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.new(0, 1, 0)
label.TextScaled = true
label.Text = "Listening..."

-- Logging function
local function updateLog(msg)
    label.Text = msg
end

local function hookRemote(obj)
    if obj:IsA("RemoteEvent") then
        local name = obj:GetFullName()
        local original = obj.FireServer
        obj.FireServer = function(self, ...)
            local args = {...}
            local strArgs = ""
            for i,v in ipairs(args) do
                strArgs = strArgs .. tostring(i) .. ":" .. tostring(v) .. " "
            end
            updateLog("üöÄ " .. name .. "\nArgs: " .. strArgs)
            return original(self, ...)
        end
    elseif obj:IsA("RemoteFunction") then
        local name = obj:GetFullName()
        local original = obj.InvokeServer
        obj.InvokeServer = function(self, ...)
            local args = {...}
            local strArgs = ""
            for i,v in ipairs(args) do
                strArgs = strArgs .. tostring(i) .. ":" .. tostring(v) .. " "
            end
            updateLog("üîÅ " .. name .. "\nArgs: " .. strArgs)
            return original(self, ...)
        end
    end
end

for _, obj in ipairs(RS:GetDescendants()) do
    hookRemote(obj)
end

RS.DescendantAdded:Connect(function(obj)
    hookRemote(obj)
end)

updateLog("‚úÖ Ready. Do pet actions.")
