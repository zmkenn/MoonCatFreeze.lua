-- üêæ Pet Spawner Script (Anti-Removal Bypass)
-- Load this via Delta: loadstring(game:HttpGet("https://raw.githubusercontent.com/zmkenn/MoonCatFreeze.lua/main/petspawner", true))()

repeat wait() until game:IsLoaded() and game.Players.LocalPlayer and game.Players.LocalPlayer:FindFirstChild("PlayerGui")

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer
local Backpack = LocalPlayer:WaitForChild("Backpack")
local StarterGui = game:GetService("StarterGui")

-- UI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 220)
frame.Position = UDim2.new(0.5, -160, 0.5, -110)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 10)
uiCorner.Parent = frame

local function createInput(name, posY)
    local label = Instance.new("TextLabel")
    label.Text = name .. ":"
    label.Position = UDim2.new(0, 10, 0, posY)
    label.Size = UDim2.new(0, 80, 0, 25)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 18
    label.Parent = frame

    local input = Instance.new("TextBox")
    input.PlaceholderText = name
    input.Position = UDim2.new(0, 100, 0, posY)
    input.Size = UDim2.new(0, 200, 0, 25)
    input.Font = Enum.Font.SourceSans
    input.TextSize = 18
    input.TextColor3 = Color3.new(0, 0, 0)
    input.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    input.Parent = frame

    return input
end

local petInput = createInput("Pet Name", 10)
local ageInput = createInput("Age", 45)
local weightInput = createInput("Weight", 80)

local spawnBtn = Instance.new("TextButton")
spawnBtn.Position = UDim2.new(0.5, -100, 0, 130)
spawnBtn.Size = UDim2.new(0, 200, 0, 50)
spawnBtn.Text = "SPAWN PET"
spawnBtn.Font = Enum.Font.SourceSansBold
spawnBtn.TextSize = 24
spawnBtn.TextColor3 = Color3.new(1, 1, 1)
spawnBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
spawnBtn.Parent = frame

-- Anti-Remove Function
local function protectTool(tool)
    tool.AncestryChanged:Connect(function(_, parent)
        if not parent then
            warn("Tool was removed, restoring...")
            tool.Parent = Backpack
        end
    end)
end

spawnBtn.MouseButton1Click:Connect(function()
    local petName = petInput.Text
    local age = tonumber(ageInput.Text) or 1
    local weight = tonumber(weightInput.Text) or 1

    if not petName or petName == "" then return end

    local foundTool = nil
    for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
        if obj:IsA("Tool") and string.lower(obj.Name) == string.lower(petName) then
            foundTool = obj
            break
        end
    end

    if not foundTool then
        warn("‚ùå Pet Tool not found in ReplicatedStorage: " .. petName)
        return
    end

    local cloned = foundTool:Clone()
    cloned.Parent = Backpack

    -- Anti-Remove Hook
    protectTool(cloned)

    local ageValue = cloned:FindFirstChild("Age")
    if ageValue and ageValue:IsA("NumberValue") then
        ageValue.Value = age
    end

    local weightValue = cloned:FindFirstChild("Weight")
    if weightValue and weightValue:IsA("NumberValue") then
        weightValue.Value = weight
    end

    print("‚úÖ Spawned " .. petName .. " with Age: " .. age .. " and Weight: " .. weight)
end)

print("‚úÖ Pet Spawner GUI with Anti-Removal loaded")
