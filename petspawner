-- üê± Freeze all MoonCats owned by you
-- Works by anchoring parts of models named "MoonCat"

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local function freezeMoonCats()
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and obj.Name == "MoonCat" then
            local owner = obj:FindFirstChild("Owner")
            if owner and owner:IsA("ObjectValue") and owner.Value == player then
                for _, part in ipairs(obj:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.Anchored = true
                    end
                end
            end
        end
    end
end

-- Freeze once, then repeat every 3 seconds to cover new MoonCats
freezeMoonCats()
while true do
    task.wait(3)
    freezeMoonCats()
end
