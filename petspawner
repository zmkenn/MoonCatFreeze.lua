-- Hook FireServer to capture the pet gifting remote
local mt = getrawmetatable(game)
setreadonly(mt, false)

local old = mt.__namecall

mt.__namecall = newcclosure(function(self, ...)
	local method = getnamecallmethod()
	local args = {...}

	if method == "FireServer" and typeof(args[1]) == "string" and tostring(args[1]):lower():find("gift") then
		print("ðŸ”¥ Remote triggered:", self:GetFullName())
		print("Args:")
		for i, v in ipairs(args) do
			print(" ", i, "=", v)
		end
	end

	return old(self, ...)
end)
