-- MoonCat Full Freezer with Passive Visual Lock

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create GUI Logger
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "FreezeLogger"
screenGui.ResetOnSpawn = false

local logBox = Instance.new("TextLabel", screenGui)
logBox.Size = UDim2.new(0, 500, 0, 400)
logBox.Position = UDim2.new(0, 20, 0, 20)
logBox.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
logBox.TextColor3 = Color3.fromRGB(0, 255, 0)
logBox.Font = Enum.Font.Code
logBox.TextSize = 14
logBox.TextXAlignment = Enum.TextXAlignment.Left
logBox.TextYAlignment = Enum.TextYAlignment.Top
logBox.TextWrapped = true
logBox.TextScaled = false
logBox.Text = ""

local function log(msg)
	logBox.Text = logBox.Text .. msg .. "\n"
end

-- Function to freeze all MoonCats
local function freezeMoonCats()
	local petsFolder = workspace:FindFirstChild("PetsPhysical")
	if not petsFolder then return log("‚ùå PetsPhysical not found") end

	local petMover = petsFolder:FindFirstChild("PetMover")
	if not petMover then return log("‚ùå PetMover not found") end

	local count = 0
	for _, pet in pairs(petMover:GetChildren()) do
		if pet:IsA("Model") and pet.Name == "Cat" then
			count += 1
			log("üì¶ Freezing MoonCat #" .. count)

			local clone = pet:Clone()
			clone.Name = "FrozenMoonCat_" .. tostring(count)

			-- Anchor all parts in the clone
			for _, item in pairs(clone:GetDescendants()) do
				if item:IsA("BasePart") then
					item.Anchored = true
					item.CanCollide = false
					item:SetNetworkOwner(nil)
				end
			end

			-- Place the frozen copy in the same location
			local root = pet:FindFirstChild("RootPart") or pet.PrimaryPart or pet:FindFirstChildWhichIsA("BasePart")
			if root then
				clone:SetPrimaryPartCFrame(root.CFrame)
				clone.Parent = petMover
			else
				log("‚ö†Ô∏è Could not find RootPart for: " .. pet.Name)
			end

			-- Optional: hide original
			-- pet.Parent = nil
		end
	end

	if count == 0 then
		log("‚ùå No MoonCats found.")
	else
		log("‚úÖ Done freezing " .. count .. " MoonCats.")
	end
end

freezeMoonCats()
